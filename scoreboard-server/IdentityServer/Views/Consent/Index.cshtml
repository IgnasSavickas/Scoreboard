@using IdentityServer.Models.ViewModels
@model ConsentViewModel

@{
    ViewData["Title"] = "Consent";
}

<div class="page-consent">
    <div class="row">
        <div class="col-sm-10">
            @if (Model.ClientLogoUrl != null)
            {
                <div class="client-logo"><img src="@Model.ClientLogoUrl"></div>
            }
            <h1 class="bd-title">
                @Model.ClientName
                <small>is requesting your permission</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            @Html.Partial("_ValidationSummary")

            <form asp-action="Index" class="consent-form">
                <input type="hidden" asp-for="ReturnUrl" />

                <div>Uncheck the permissions you do not wish to grant.</div>

                @if (Model.IdentityScopes.Any())
                {
                    <div class="panel panel-default consent-buttons form-group">
                        <div class="panel-heading">
                            <i class="mdi mdi-account-box"></i>
                            Personal Information
                        </div>
                        <div class="consent-checkbox">
                            @foreach (var scope in Model.IdentityScopes)
                            {
                                @Html.Partial("_ScopeListItem", scope)
                            }
                        </div>
                    </div>
                }

                @if (Model.ResourceScopes.Any())
                {
                    <div class="panel panel-default form-group">
                        <div class="panel-heading">
                            <i class="mdi mdi-assessment"></i>
                            Application Access
                        </div>
                        <div class="consent-checkbox">
                            @foreach (var scope in Model.ResourceScopes)
                            {
                                @Html.Partial("_ScopeListItem", scope)
                            }
                        </div>
                    </div>
                }

                @if (Model.AllowRememberConsent)
                {
                    <div class="consent-remember checkbox">
                        <label>
                            <input class="consent-scopecheck" asp-for="RememberConsent" />
                            <strong>Remember My Decision</strong>
                        </label>
                    </div>
                }

                <div class="consent-buttons">
                    <button name="button" value="yes" class="btn btn-raised btn-primary" autofocus>Yes, Allow</button>
                    <button name="button" value="no" class="btn btn-raised">No, Do Not Allow</button>
                    @if (Model.ClientUrl != null)
                    {
                        <a class="pull-right btn btn-raised btn-primary" target="_blank" href="@Model.ClientUrl">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            <strong>@Model.ClientName</strong>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>